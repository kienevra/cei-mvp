{
  "root": "dist",
  "clean_urls": false,
  "trailing_slash": false,
  "routes": [
    { "src": "/api/.*", "status": 404 },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    { "source": "/(.*)\\.(js|css|map|json)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }] },
    { "source": "/(.*)\\.(png|jpg|jpeg|svg|ico)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }] }
  ]
}
