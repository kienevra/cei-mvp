worker_processes 1;

events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;

  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;

  gzip on;
  gzip_types text/plain text/css application/json application/javascript application/xml+rss application/xml text/javascript image/svg+xml;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;
    root /app/dist;
    index index.html;

    # Long-cache immutable assets (images & fonts)
    location ~* \.(png|jpg|jpeg|gif|svg|ico|webp|avif|woff|woff2|ttf|otf)$ {
      try_files $uri =404;
      add_header Cache-Control "public, max-age=31536000, immutable";
    }

    # App bundles / maps / manifest: revalidate
    location ~* \.(js|css|map|json)$ {
      try_files $uri =404;
      add_header Cache-Control "public, max-age=0, must-revalidate";
    }

    # Block accidental API calls (this frontend should not handle them)
    location ^~ /api/ {
      return 404;
    }

    # SPA fallback
    location / {
      try_files $uri /index.html;
    }
  }
}