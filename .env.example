# .env.example - copy to .env and fill with secrets (DO NOT COMMIT .env)
# Backend / Render
DATABASE_URL=postgres://user:password@db.host:5432/cei
PGSSLMODE=require
JWT_SECRET=super-secret-jwt-key
SECRET_KEY=another-secret-if-needed
ALLOWED_ORIGINS=http://localhost:5173,https://your-vercel-app.vercel.app
REDIS_URL=redis://localhost:6379/0
GATEWAY_SHARED_SECRET=gateway-secret

# Optional Supabase
SUPABASE_URL=https://xyz.supabase.co
